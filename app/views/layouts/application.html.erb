<!DOCTYPE html>
<html>
<head>
  <title>Bloggex</title>
  <%= stylesheet_link_tag    'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<%= render 'layouts/sidebar' %>
	<div id="main_content">
    <div id="header">
      <% if current_page?(root_path) %>
          <p>All Posts</p>
    <% elsif current_page?(about_path) %>
          <p>About</p>
    <% else %>
          <%= link_to "Back to All Posts", root_path %>
    <% end %>
 
    
      <div class="buttons">
        <% if user_signed_in? %>
        <%= link_to "New Post", new_post_path, class: "button" %>
        <%= link_to "Log Out", destroy_user_session_path, class: "button" %>
        <% else %>
        <%= link_to "Register", new_user_registration_path, class: "button" %></button>
        <%= link_to "Log in", new_user_session_path, class: "button" %>
        <% end %>
      </div>
    </div>
 
    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert") %>
    <% end %>
 
    <%= yield %>
  </div>

</body>
</html>
